<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.MedalsTableController">
    <children>
        <BorderPane prefHeight="700.0" prefWidth="1200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <center>
                <TableView fx:id="medalsTableView" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn fx:id="countryIDTableColumn" prefWidth="102.0" text="Country ID" />
                        <TableColumn fx:id="countryTableColumn" minWidth="20.0" prefWidth="100.0" text="Country" />
                        <TableColumn fx:id="goldMedalsTableColumn" minWidth="20.0" prefWidth="100.0" text="Gold Medals" />
                        <TableColumn fx:id="silverMedalsTableColumn" minWidth="20.0" prefWidth="90.0" text="Silver Medals" />
                        <TableColumn fx:id="bronzeMedalsTableColumn" minWidth="20.0" prefWidth="90.0" text="Bronze Medals" />
                        <TableColumn fx:id="totalMedalsTableColumn" minWidth="20.0" prefWidth="110.0" text="Total Medals" />
                        <TableColumn fx:id="populationTableColumn" minWidth="20.0" prefWidth="114.0" text="Population" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </center>
            <bottom>
                <Button mnemonicParsing="false" onAction="#changeScenes" text="View Chart" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets top="5.0" />
               </BorderPane.margin></Button>
            </bottom>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
        </BorderPane>
    </children>
</AnchorPane>
